<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
<mapper namespace="com.llbt.cms.dao.TableRuleMapper">
	<!-- 查询结果映射 -->
	<resultMap id="searchResultMap" type="com.llbt.cms.entity.TableRule">
		<result property="id" column="ID" />
		<result property="tableName" column="TABLE_NAME" />
		<result property="rule" column="RULE" />
		<result property="createBy" column="CREATE_BY" />
		<result property="createDate" column="CREATE_DATE" />
		<result property="ruleDesc" column="RULE_DESC" />
	</resultMap>
	<!-- 用于select查询公用抽取的列 -->
	<sql id="columns">
		ID,TABLE_NAME,RULE,CREATE_BY,CREATE_DATE,RULE_DESC
	</sql>
	<!-- 新增记录 -->
	<insert id="insert" parameterType="com.llbt.cms.entity.TableRule">
		INSERT INTO MMS_TABLE_RULE (
		ID ,
		TABLE_NAME ,
		RULE ,
		CREATE_BY ,
		CREATE_DATE ,
		RULE_DESC
		) VALUES (
		#{id},
		#{tableName},
		#{rule},
		#{createBy},
		#{createDate},
		#{ruleDesc}
		)
	</insert>
	<!-- 单记录更新 -->
	<update id="update" parameterType="com.llbt.cms.entity.TableRule">
		UPDATE MMS_TABLE_RULE
		<trim prefix="set" suffixOverrides=",">
			<if test="id != null">
				ID =#{id},
			</if>
			<if test="tableName != null">
				TABLE_NAME =#{tableName},
			</if>
			<if test="rule != null">
				RULE =#{rule},
			</if>
			<if test="ruleDesc != null">
				RULE_DESC =#{ruleDesc},
			</if>
		</trim>
		where id=#{id}
	</update>
	<!-- 查询记录BY ID -->
	<select id="getById" resultMap="searchResultMap" parameterType="java.lang.String">
		select
		<include refid="columns" />
		from
		MMS_TABLE_RULE where id=#{id}
	</select>
	<!-- 查询所有记录 -->
	<select id="getAll" resultMap="searchResultMap" parameterType="java.lang.String">
		select
		<include refid="columns" />
		from
		MMS_TABLE_RULE order by create_date desc
	</select>
	<!-- 查询分页记录 -->
	<select id="queryPage" resultMap="searchResultMap"
		parameterType="com.llbt.cms.vo.Page">
		select *
		from (select rownum rw, t.*
		from (select
		<include refid="columns" />
		from MMS_TABLE_RULE order by create_date desc) t
		where rownum <![CDATA[<=]]>
		#{endLine})
		where rw <![CDATA[>]]>
		#{startLine}
	</select>

	<select id="getTableRuleCount" resultType="int">
		select count(1) from
		MMS_TABLE_RULE
	</select>
	<!-- 动态查询条件 -->
	<sql id="searchConditionSQL">
		<trim prefix="where" prefixOverrides="AND |OR ">
			<if test="id != null">
				and ID = #{id}
			</if>
			<if test="tableName != null">
				and TABLE_NAME = #{tableName}
			</if>
			<if test="rule != null">
				and RULE = #{rule}
			</if>
			<if test="createBy != null">
				and CREATE_BY = #{createBy}
			</if>
			<if test="createDate != null">
				and CREATE_DATE = #{createDate}
			</if>
			<if test="ruleDesc != null">
				and RULE_DESC = #{ruleDesc}
			</if>
		</trim>
	</sql>



</mapper>