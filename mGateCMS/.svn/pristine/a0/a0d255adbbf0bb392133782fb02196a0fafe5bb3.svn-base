<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
<mapper namespace="com.llbt.cms.dao.GateMapper">
    <!-- 查询结果映射 -->
    <resultMap id="searchResultMap" type="com.llbt.cms.entity.Gate">
        <result property="id" column="id" />
        <result property="createBy" column="create_by" />
        <result property="createDate" column="create_date" />
        <result property="updateBy" column="update_by" />
        <result property="updateDate" column="update_date" />
    </resultMap>
    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
       id,create_by,create_date,update_by,update_date
    </sql>
    
    <!-- 新增记录 -->
    <insert id="insert" parameterType="com.llbt.cms.entity.Gate">
        INSERT INTO hw_gate (
            id ,
            create_by ,
            create_date ,
            update_by ,
            update_date
        ) VALUES (
        #{id} ,
        #{createBy} ,
        #{createDate} ,
        #{updateBy} ,
        #{updateDate}
        )
    </insert>
    <!-- 单记录删除 -->
    <delete id="delete" parameterType="java.lang.String">
        delete from hw_gate where id=#{id}
    </delete>
    <!-- 批量记录删除 -->
    <delete id="deleteByIds" parameterType="java.util.List">
        delete from hw_gate where id in
        <foreach collection="list" item="ids" open="(" separator="," close=")">#{ids}</foreach>
    </delete>
    <!-- 按条件删除 -->
    <delete id="deleteBySearchCondition" parameterType="com.llbt.cms.vo.searcher.GateSC" >
        DELETE FROM  hw_gate
        <include refid="searchConditionSQL" />
    </delete>
    <!-- 单记录更新 -->
    <update id="update" parameterType="com.llbt.cms.entity.Gate">
        UPDATE hw_gate
        <trim prefix="set" suffixOverrides=",">
            <if test="updateBy != null">
                update_by =#{updateBy},
            </if>
            <if test="updateDate != null">
                update_date =#{updateDate},
            </if>
        </trim>
        where id=#{id}
    </update>
    <!-- 查询记录BY ID -->
    <select id="getById" resultMap="searchResultMap" parameterType="java.lang.String">
        select
        <include refid="columns" />
        from
        hw_gate where id=#{id}
    </select>
    <!-- 查询所有记录 -->
    <select id="getAll" resultMap="searchResultMap" parameterType="java.lang.String">
        select
        <include refid="columns" />
        from
        hw_gate
    </select>
    <!-- 动态查询条件 
     and name LIKE CONCAT('%', #{name}, '%')
    -->
    <sql id="searchConditionSQL">
        <trim prefix="where" prefixOverrides="AND |OR ">
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="createBy != null">
                and create_by = #{createBy}
            </if>
            <if test="createDate != null">
                and create_date = #{createDate}
            </if>
            <if test="updateBy != null">
                and update_by = #{updateBy}
            </if>
            <if test="updateDate != null">
                and update_date = #{updateDate}
            </if>
        </trim>
    </sql>
    
     <select id="search" resultMap="searchResultMap" useCache="true" parameterType="com.llbt.cms.vo.searcher.GateSC">
        select
        <include refid="columns" />
        from hw_gate
        <include refid="searchConditionSQL" />
    </select>
    
     <select id="selectPage" resultMap="searchResultMap" useCache="true" parameterType="com.llbt.cms.vo.searcher.GateSC">
        select
        <include refid="columns" />
        from hw_gate
        <include refid="searchConditionSQL" />
    </select>
    
    <select id="selectPageCount" resultType="long" parameterType="com.llbt.cms.vo.searcher.GateSC">
        select count(id) from hw_gate
        <include refid="searchConditionSQL" />
    </select>
</mapper>