<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
<mapper namespace="com.llbt.cms.dao.FeedbackInfoMapper">
	<!-- 查询结果映射 -->
	<resultMap id="searchResultMap" type="com.llbt.cms.entity.FeedbackInfo">
		<result property="id" column="id" />
		<result property="createBy" column="create_by" />
		<result property="createDate" column="create_date" />
		<result property="updateBy" column="update_by" />
		<result property="updateDate" column="update_date" />
		<result property="parentId" column="parent_id" />
		<result property="content" column="content" />
		<result property="replyState" column="reply_state" />
		<result property="replyType" column="reply_type" />

		<result property="refSystem" column="ref_system" />
		<result property="replyContent" column="reply_content" />
		<result property="replyUserName" column="reply_user_name" />
		<result property="userName" column="user_name" />

	</resultMap>
	<!-- 用于select查询公用抽取的列 -->
	<sql id="columns">
		id,create_by,create_date,update_by,update_date,parent_id,content,reply_state,reply_type,ref_system
	</sql>
	<!-- 新增记录 -->
	<insert id="insert" parameterType="com.llbt.cms.entity.FeedbackInfo">
		INSERT INTO mms_feedback_info
		(
		id ,
		create_by ,
		create_date ,
		update_by ,
		update_date ,
		parent_id ,
		content ,
		reply_state ,
		reply_type
		) VALUES (
		#{id},
		#{createBy},
		#{createDate},
		#{updateBy},
		#{updateDate},
		#{parentId},
		#{content},
		#{replyState},
		#{replyType}
		)
	</insert>
	<!-- 单记录删除 -->
	<delete id="delete" parameterType="java.lang.String">
		update mms_feedback_info set
		is_delete=1
		where id=#{id}
	</delete>
	<!-- 批量记录删除 -->
	<delete id="deleteByIds" parameterType="java.util.List">
		update mms_feedback_info set is_delete=1 where id in
		<foreach collection="list" item="ids" open="(" separator=","
			close=")">#{ids}</foreach>
	</delete>
	<!-- 单记录更新 -->
	<update id="update" parameterType="com.llbt.cms.entity.FeedbackInfo">
		UPDATE mms_feedback_info
		<trim prefix="set" suffixOverrides=",">
			<if test="updateBy != null">
				update_by =#{updateBy},
			</if>
			<if test="updateDate != null">
				update_date =#{updateDate},
			</if>
			<if test="parentId != null">
				parent_id =#{parentId},
			</if>
			<if test="content != null">
				content =#{content},
			</if>
			<if test="replyState != null">
				reply_state =#{replyState},
			</if>
			<if test="replyType != null">
				reply_type =#{replyType},
			</if>
		</trim>
		where id=#{id}
	</update>
	<!-- 查询记录BY ID -->
	<select id="getById" resultMap="searchResultMap" parameterType="java.lang.String">
		select
		t.*,t1.content reply_content,u.real_name reply_user_name
		from
		mms_feedback_info t left join mms_feedback_info t1 on
		t1.parent_id=t.id left join mms_user u on t1.create_by=u.id where
		t.id=#{id}
	</select>
	<!-- 查询所有记录 -->
	<select id="getAll" resultMap="searchResultMap" parameterType="java.lang.String">
		select
		<include refid="columns" />
		from
		mms_feedback_info order by create_date desc
	</select>
	<!-- 查询分页记录 -->
	<select id="queryPage" resultMap="searchResultMap"
		parameterType="com.llbt.cms.vo.Page">
		select *
		from (select rownum rw, t.*
		from (select
		<include refid="columns" />
		from mms_feedback_info where parent_id='0' order by create_date desc)
		t
		where rownum <![CDATA[<=]]>
		#{endLine})
		where rw <![CDATA[>]]>
		#{startLine}
	</select>

	<select id="getFeedbackInfoCount" resultType="int">
		select count(1)
		from mms_feedback_info
	</select>
	<!-- 动态查询条件 -->
	<sql id="searchConditionSQL">
		<trim prefix="where" prefixOverrides="AND |OR ">
			<if test="id != null">
				and id = #{id}
			</if>
			<if test="createBy != null">
				and create_by = #{createBy}
			</if>
			<if test="createDate != null">
				and create_date = #{createDate}
			</if>
			<if test="updateBy != null">
				and update_by = #{updateBy}
			</if>
			<if test="updateDate != null">
				and update_date = #{updateDate}
			</if>
			<if test="parentId != null">
				and parent_id = #{parentId}
			</if>
			<if test="content != null">
				and content = #{content}
			</if>
			<if test="replyState != null">
				and reply_state = #{replyState}
			</if>
			<if test="replyType != null">
				and reply_type = #{replyType}
			</if>
		</trim>
	</sql>

	<select id="queryCustFeedBackPage" resultMap="searchResultMap"
		parameterType="com.llbt.cms.vo.Page">
		select 
		fi.*,c.user_name
		from
		mms_feedback_info fi left join mgate_customer c on fi.create_by=c.id
		and
		c.ACCOUNT_STATUS!=1 where fi.ref_system='1' and fi.parent_id='0'
		order by
		fi.create_date desc
		limit #{startLine},#{pageSize}
		
	<!-- 	select *
		from (select rownum rw, t.*
		from (select
		fi.*,c.user_name
		from
		mms_feedback_info fi left join mgate_customer c on fi.create_by=c.id
		and
		c.ACCOUNT_STATUS!=1 where fi.ref_system='1' and fi.parent_id='0'
		order by
		fi.create_date desc)
		t
		where rownum <![CDATA[<=]]>
		#{endLine})
		where rw <![CDATA[>]]>
		#{startLine}
	 -->
	 </select>

	<select id="countCustFeedBack" resultType="int">
		select count(1) from
		mms_feedback_info where ref_system='1' and parent_id='0'
	</select>

	<select id="queryMercFeedBackPage" resultMap="searchResultMap"
		parameterType="com.llbt.cms.vo.Page">
		select 
		fi.*,a.user_name
		from
		mms_feedback_info fi left join mgate_admin a on fi.create_by=a.id and
		a.ACCOUNT_STATUS!=1 where fi.ref_system='2' and fi.parent_id='0' order
		by
		fi.create_date desc
		limit #{startLine},#{pageSize}
		
		
		<!-- select *
		from (select rownum rw, t.*
		from (select
		fi.*,a.user_name
		from
		mms_feedback_info fi left join mgate_admin a on fi.create_by=a.id and
		a.ACCOUNT_STATUS!=1 where fi.ref_system='2' and fi.parent_id='0' order
		by
		fi.create_date desc)
		t
		where rownum <![CDATA[<=]]>
		#{endLine})
		where rw <![CDATA[>]]>
		#{startLine} -->
	</select>

	<select id="countMercFeedBack" resultType="int">
		select count(1) from
		mms_feedback_info where ref_system='2' and parent_id='0'
	</select>

	<select id="getCustUsertName" resultType="java.lang.String">
		select user_name from
		mgate_customer where ACCOUNT_STATUS!='1' and id=#{userId}
	</select>
				
	<select id="getMercUsertName" resultType="java.lang.String">
		select user_name from
		mgate_admin where ACCOUNT_STATUS!='1' and id=#{userId}
	</select>
	<select id="getMercUserName" resultType="java.lang.String">
		select user_name from
		mgate_admin where ACCOUNT_STATUS!='1' and id=#{userId}
	</select>

</mapper>